.container
  .headr.clearfix
    = render partial: 'application/navigation'
    %h3.text-muted Forms
    %hr
  %h2 Edit Form
  = form_for(@form) do |f|
    .form
      = error_messages_for(f.object)
      .form-group
        %h2 Title
        = f.label(:title, 'Title')
        = f.text_field(:title, class: "form-control",:required => true)
        - @counter = 0
        = f.fields_for(:questions) do |q|
          = render 'question_fields', f: q
        = link_to_add_fields("Add Question", f, :questions)  
    = link_to("Cancel", forms_path, :class => 'btn btn-lg btn-default')
    = f.submit "Update Form", :class => "btn btn-lg btn-primary"
